        "input": true
      },
      {
        "label": {
          "ru": "Тип условия",
          "en": "Condition Type"
        },
        "key": "conditionType",
        "dataSrc": "values",
        "data": {
          "values": [
            {
              "label": "NONE",
              "value": "NONE"
            },
            {
              "label": "OUTCOME",
              "value": "OUTCOME"
            },
            {
              "label": "SCRIPT",
              "value": "SCRIPT"
            },
            {
              "label": "EXPRESSION",
