            "hidden": true,
            "defaultValue": "",
            "refreshOn": [],
            "optionalWhenDisabled": false,
            "logic": [
              {
                "name": "is template selected",
                "trigger": {
                  "type": "javascript",
                  "javascript": "return !!data.notificationTemplate"
                },
                "actions": [
                  {
                    "name": "display",
                    "type": "property",
                    "property": {
                      "label": "Hidden",
                      "value": "hidden",
                      "type": "boolean"
                    },
                    "state": "false"
                  }
                ]
              }
            ],
            "type": "textfield",
            "input": true
          },
          {
            "label": {
              "ru": "Заголовок",
              "en": "Title"
