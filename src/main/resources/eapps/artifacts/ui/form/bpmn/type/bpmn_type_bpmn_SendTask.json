    "components": [
      {
        "label": "load roles",
        "source": {
          "type": "recordsScript",
          "recordsScript": {
            "attributes": {
              "rolesData": "model.roles[]{value:id,label:name}"
            },
            "script": "let ref = instance.options.editor.getEcosType()._id;\n\nif (!!ref) {\n  value = ref;\n}"
          },
          "forceLoad": false
        },
        "update": {
          "type": "once"
        },
        "key": "roles",
        "type": "asyncData",
        "input": true
      },
      {
        "label": {
          "ru": "Имя",
          "en": "Name"
        },
        "key": "name_ml",
        "validate": {
          "required": true
        },
        "refreshOn": [],
        "optionalWhenDisabled": false,
        "type": "mlText",
        "input": true
      },
      {
        "label": {
          "ru": "Тип уведомления",
          "en": "Notification type"
        },
        "key": "notificationType",
        "disabled": true,
        "validate": {
          "required": true
        },
        "dataSrc": "values",
        "data": {
          "values": [
            {
              "label": "Электронная почта",
              "value": "EMAIL_NOTIFICATION"
            },
            {
              "label": "Мобильное push уведомление",
              "value": "FIREBASE_NOTIFICATION"
            }
          ]
        },
        "defaultValue": "",
        "customDefaultValue": "value = \"EMAIL_NOTIFICATION\";",
        "optionalWhenDisabled": false,
        "type": "ecosSelect",
        "input": true
      },
      {
        "label": {
